<%= form_with(model: @movie, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Title"%>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre, required: true, placeholder: "Genre"%>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year, required: true, placeholder: "Year"%>
  </div>

  <%= f.submit class: "ui button"%>

<% end %>